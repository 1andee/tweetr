<!DOCTYPE html>
<html lang="en">

<%- include('partials/_header') %>

  <body>

    <%- include('partials/_navbar') %>

    <!-- Page-specific (main) content here -->
    <main class="container">

        <h2>Login</h2>
        <% if (messages) { %>
          <% for (key in messages) { %>
            <div class="alert alert-<%= [key] %>">
              <span style="color: black; border-size: 3px; border-color: black;"><%= messages[key] %></span>
            </div>
            <% } %>
            <br>
        <% } %>
        
        <section class="user-login">
        <form action="/login" method="POST" >
          <label for="handle">Username:</label>
          <input type="text" style="width: 40%;" id="handle" name="handle" placeholder="@roy"></input>
          <br>
          <br>
          <label for="password">Password:</label>
          <input type="password" style="width: 38%;" id="password" name="password"></input>
          <br>
          <br>
          <input type="submit" value="Login">
        </form>
      </section>

    </main>

  </body>
</html>
